# ========================================
# PRODUCT APPROVAL SYSTEM CONFIGURATION
# ========================================

# Enable/disable product approval system
PRODUCT_APPROVAL_ENABLED=true

# Master switch for all new features (required for approval system)
ENABLE_NEW_FEATURES=true

# Auto-approve trusted admins (set to false as user wants manual approval)
AUTO_APPROVE_TRUSTED_ADMINS=false

# Default product status when approval system is disabled
DEFAULT_PRODUCT_STATUS=approved

# Product Approval Settings
REQUIRE_APPROVAL_FOR_NEW_PRODUCTS=true

# ========================================
# MESSAGING SYSTEM CONFIGURATION
# ========================================

# Enable/disable messaging system
MESSAGING_SYSTEM_ENABLED=true

# Message configuration
MAX_MESSAGE_LENGTH=2000
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image,video,audio,pdf
ENABLE_AUDIO_MESSAGES=true
ENABLE_VIDEO_MESSAGES=true

# ========================================
# DATABASE CONFIGURATION
# ========================================

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/your-database-name

# ========================================
# JWT CONFIGURATION
# ========================================

# JWT secret key (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-here

# ========================================
# EMAIL CONFIGURATION (Required for notifications)
# ========================================

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email sender information
EMAIL_FROM_NAME=IN-N-OUT Store
EMAIL_FROM_ADDRESS=noreply@in-nd-out.com
EMAIL_REPLY_TO=support@in-nd-out.com
SUPPORT_EMAIL=support@in-nd-out.com
ADMIN_EMAIL=admin@in-nd-out.com
ADMIN_NAME=IN-N-OUT Admin

# Legacy email settings (for backward compatibility)
EMAIL_PASSWORD=your-app-password
EMAIL_USER=your-email@gmail.com
EMAIL_FROM=noreply@in-nd-out.com
REPLY_TO_EMAIL=support@in-nd-out.com
EMAIL_PROVIDER=gmail

# ========================================
# APP CONFIGURATION
# ========================================

# Environment mode
NODE_ENV=production

# API Port
PORT=5000

# Client URL (for CORS and redirects)
CLIENT_URL=https://your-domain.com

# Server URL
SERVER_URL=https://your-api-domain.com

# Session secret
SESSION_SECRET=your-session-secret-key

# ========================================
# FILE UPLOAD (CLOUDINARY)
# ========================================

# Cloudinary cloud name
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name

# Cloudinary API key
CLOUDINARY_API_KEY=your-cloudinary-api-key

# Cloudinary API secret
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ========================================
# PAYMENT GATEWAY (PAYSTACK)
# ========================================

# Paystack secret key
PAYSTACK_SECRET_KEY=your-paystack-secret-key

# Paystack public key
PAYSTACK_PUBLIC_KEY=your-paystack-public-key

# ========================================
# OAUTH CONFIGURATION
# ========================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# ========================================
# OPTIONAL SERVICES
# ========================================

# Sentry DSN for error tracking
# SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Google Analytics ID
# GOOGLE_ANALYTICS_ID=your-google-analytics-id 